/*
    expansive.json - Configuration for esp-angular-skeleton
 */
{
    services: {
        'clean-css': true,
        'compile-less-css': {
            stylesheet: 'css/all.css'
        }
    },
    debug: {
        services: {
            'compile-html': false,
            'minify-css':   false,
            'minify-js':    false,
            'package-ng':   false
        }
    },
    release: {
        services: {
            'compile-ng-js': {
                files: [ 
                    '**.js',
                    '!lib/**.js',
                    'lib/esp*/**.js', 
                    'lib/angular*/**.js', 
                ]
            },
            'minify-css': true
        }
    }
}
