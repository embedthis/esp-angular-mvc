/*
    expansive.json - Configuration for esp-angular-skeleton
 */
{
    debug: {
        services: {
            'package-ng':   false
        }
    },
    release: {
        services: {
            'compile-ng-js': {
                files: [ 
                    '**.js',
                    '!lib/**.js',
                    'lib/esp*/**.js', 
                    'lib/angular*/**.js', 
                ]
            },
            "minify-css": {
                "minify": true
            }
        }
    }
}
