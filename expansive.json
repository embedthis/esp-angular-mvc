/*
    expansive.json - Configuration for esp-angular-skeleton
 */
{
    "control": {
        "post": [
            "ng-package",
            "compile-esp",
            "compress",
        ],
        "?render": {
            "?js": [
                "main.js",
                "**.js.ng",
                "**.js"
            ]
        },
    },
    debug: {
        services: {
            "?compress": false,
            "?html": false,
            "?js": {
                "?minify": false,
                "?usemin": true,
                "?usemap": true
            },
            "?ng-compile-html": false,
            "?ng-package": false
        }
    },
    release: {
        services: {
            "?compress": true,
            "?css": {
                "?minify": true,
                "?usemin": true,
                "?usemap": false
            },
            "?js": {
                "?minify": true,
                "?usemin": true,
                "?usemap": false
            },
            "?ng-compile-js": {
                "?files": [
                    "**.js",
                    "!lib/**.js",
                    "lib/angular*/**.js",
                    "lib/esp*/**.js"
                ]
            },
            "?ng-package": {
                "?minify": true,
                "?dotmin": true
            }
        }
    }
}
