/*
    expansive.json - Configuration for esp-angular-skeleton
 */
{
    "control": {
        "post": [
            "ng-package",
            "compile-esp",
            "compress",
        ],
    },
    "services": {
        "clean-css": true
    },
    debug: {
        services: {
            "compress": false,
            "ng-compile-html": false,
            "ng-package": false
        }
    },
    release: {
        services: {
            "compress": false,
            "render-js": {
                "usemap": false
            },
            "render-css": {
                "usemap": false,
                "usemin": true
            },
            "ng-compile-js": {
                "files": [
                    "contents/**.js",
                    "lib/esp*/**.js",
                    "lib/angular*/**.js"
                ]
            },
            "ng-package": true
        }
    }
}
