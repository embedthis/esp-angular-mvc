{
    "name": "esp-angular-skeleton",
    "description": "ESP Angular MVC Application Skeleton",
    "version": "5.3.0",
    "keywords": [
        "esp"
    ],
    "licenses": [
        {
            "type": "GPL",
            "url": "http://www.gnu.org/licenses/gpl-2.0.html"
        }, {
            "type": "Commercial",
            "url": "https://embedthis.com/licensing/"
        }
    ],
    "dependencies": {
        "exp-ng": "^0.1",
        "exp-js": "^0.2",
        "exp-less": "^0.2",
        "exp-css": "^0.2",
        "exp-esp": "^0.1",
        "angular-bootstrap": "^0.7",
        "esp-angular": "^5.3",
        "esp-mvc": "^5.3"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/embedthis/esp-angular-skeleton.git"
    },
    "ignore": [
        "start.me"
    ],
    "pak": {
        "blend": {
            "pak": {
                "?mode": "debug",
                "?import": true,
                "?render": {
                    "js": [
                        "${TOP}/${CONTENTS}/main.js",
                        "${TOP}/${CONTENTS}/**.js.ng",
                        "${TOP}/${CONTENTS}/**.js"
                    ]
                },
                "?override": {
                    "bootstrap": {
                        "pak": {
                            "export": [
                                "less/**",
                                { "from": "dist/fonts/**", "trim": 1 }
                            ]
                        }
                    },
                    "font-awesome": {
                        "pak": {
                            "export": [
                                "less/**",
                                "fonts/**"
                            ]
                        }
                    }
                }
            }
        },
        "export": {
            "from": [
                "contents/**",
                "partials/**",
                "layouts/**"
            ],
            "to": "${TOP}",
            "overwrite": false
        },
        "manage": [
            "esp.json",
            "expansive.json"
        ],
        "version": ">=0.10.0"
    }
}
