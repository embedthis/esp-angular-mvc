{
    "name": "esp-angular-skeleton",
    "description": "ESP Angular MVC Application Skeleton",
    "version": "5.4.2",
    "keywords": [
        "esp"
    ],
    "licenses": [
        {
            "type": "GPL",
            "url": "http://www.gnu.org/licenses/gpl-2.0.html"
        }, {
            "type": "Commercial",
            "url": "https://embedthis.com/licensing/"
        }
    ],
    "dependencies": {
        "exp-angular": "~0.1",
        "angular-bootstrap": "~0.7",
        "esp-angular": "~5.4",
        "esp-mvc": "~5.4"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/embedthis/esp-angular-skeleton.git"
    },
    "ignore": [
        "start.me"
    ],
    "pak": {
        "blend": {
            "pak": {
                "?mode": "debug",
                "?import": true,
                "?render": {
                    "js": [
                        "${TOP}/${CONTENTS}/main.js",
                        "${TOP}/${CONTENTS}/**.js.ng",
                        "${TOP}/${CONTENTS}/**.js"
                    ]
                },
                "?overrides": {
                    "bootstrap": {
                        "pak": {
                            "export": [
                                "less/**",
                                { 
                                    "from": [
                                        "dist/fonts/*.eot",
                                        "dist/fonts/*.woff*",
                                        "dist/fonts/*.ttf"
                                    ],
                                    "trim": 1 
                                }
                            ]
                        }
                    },
                    "font-awesome": {
                        "pak": {
                            "export": [
                                "less/**",
                                {
                                    "from": [
                                        "fonts/*.eot",
                                        "fonts/*.woff*",
                                        "fonts/*.ttf"
                                    ]
                                }
                            ]
                        }
                    }
                }
            }
        },
        "export": {
            "from": [
                "contents/**",
                "partials/**",
                "layouts/**"
            ],
            "to": "${TOP}",
            "overwrite": false
        },
        "manage": [
            "esp.json",
            "expansive.json"
        ],
        "version": ">=0.10.0"
    }
}
